
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";


    <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.6/css/gijgo.min.css" rel="stylesheet" type="text/css" />
}

<div style="margin-bottom:120px;">
<div class="row">
    <div class="col-md-9 col-sm-9 col-xs-12">
    </div>
    <div class="col-md-3 col-sm-3 col-xs-12">
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <form action="/Candidate/Create" enctype="multipart/form-data" method="post">
            <div class="form-horizontal">
                <div class="col-lg-6 col-md-4 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label" for="CandidateName">नाम</label>

                        <input class="form-control text-box single-line" id="CandidateName" name="CandidateName" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="FathersName">पिता का नाम</label>

                        <input class="form-control text-box single-line" id="FathersName" name="FathersName" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="MothersName">माता का नाम</label>

                        <input class="form-control text-box single-line" id="MothersName" name="MothersName" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="BladGrup">ब्लड ग्रुप</label>

                        <input class="form-control text-box single-line" id="BladGrup" name="BladGrup" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label">जन्म तिथि</label>
                        <input type="text" name="txtLoginDOB" id="txtLoginDOB" value="" format="dd/mm/yyyy" class="form-control" style="width:100%;" placeholder="Date Of Birth" required="required">
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="MaximumQualification">शिक्षा</label>

                        <select class="form-control" id="MaximumQualification" name="MaximumQualification">
                            <option id="0" value="0">सलेक्ट</option>
                            <option id="1" value="<10"> &lt; 10th</option>
                            <option id="2" value="10th">10th</option>
                            <option id="3" value="Intermidiate">10+2</option>
                            <option id="4" value="Graduation">Graduation</option>
                            <option id="5" value="PostGraduation">Post Graduation</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="Gender">लिंग</label>

                        <select class="form-control" id="Gender" name="Gender">
                            <option id="0" value="0">सलेक्ट</option>
                            <option id="1" value="महिला">महिला</option>
                            <option id="2" value="पुरुष">पुरुष</option>
                            <option id="3" value="इतर">इतर</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="Email_ID">ईमेल आईडी</label>

                        <input class="form-control text-box single-line" id="Email_ID" name="Email_ID" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="Nationality">राष्ट्रीयता</label>

                        <select class="form-control" id="Nationality" name="Nationality">
                            <option id="0" value="0">सलेक्ट</option>
                            <option id="1" value="भारतीय">भारतीय</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="Address">स्थाई पता</label>

                        <textarea rows="3" id="Address" name="Address" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="TempAddress">अस्थाई पता</label>

                        <textarea rows="3" id="TempAddress" name="TempAddress" class="form-control"></textarea>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <div style="width:100%; max-width:90px; margin:auto;">
                            <img id="blah" src="http://placehold.it/180" alt="your image" style="width:100%;height:80px;" />
                            <input type='file' onchange="readURL(this);" style="width:100%;" />
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="ContactNo">संपर्क नंबर</label>

                        <input class="form-control text-box single-line" id="ContactNo" name="ContactNo" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="WhatsAppNo">whatSapp नंबर</label>

                        <input class="form-control text-box single-line" id="WhatsAppNo" name="WhatsAppNo" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="PanCard">पेन कार्ड</label>

                        <div class="Aavedan-control">
                            <input type="text" id="PanCard" name="PanCard" class="form-control" style="width:100%;" inputmode="numeric">
                            <a href="https://www.utiitsl.com/UTIITSL_SITE/pan/index.html" target="_blank">Apply Pan Card Online</a>
                            <a href="https://www.tin-nsdl.com/services/pan/pan-index.html" target="_blank">Apply Pan Card Online</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="AadharCard">आधार कार्ड</label>

                        <div class="Aavedan-control form-inline">
                            <input type="text" id="AadharCard" name="AadharCard" class="form-control  form-inline" style="width:100%;" inputmode="numeric">
                            <a href="https://uidai.gov.in/enrolment-update/aadhaar-enrolment.html" class="form-inline" target="_blank">Apply Online Aadhar</a>
                            <a href="https://appointments.uidai.gov.in/easearch.aspx" class="form-inline" target="_blank">Apply Online Aadhar</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="WorkArea">कार्य क्षेत्र</label>

                        <input class="form-control text-box single-line" id="WorkArea" name="WorkArea" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="Exprience">अनुभव</label>

                        <input class="form-control text-box single-line" id="Exprience" name="Exprience" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="ApplyFor">Apply For the Post Of </label>

                        <input class="form-control text-box single-line" id="ApplyFor" name="ApplyFor" type="text" value="">
                    </div>
                    <div class="form-group">
                        <label class="control-label  text-left" for="CandidateDesc">आवेदक के बारे में लिखे</label>

                        <textarea rows="3" id="CandidateDesc" name="CandidateDesc" class="form-control" placeholder="आवेदक के बारे में 100 शब्दों में लिखे"></textarea>
                        <span class="field-validation-valid text-danger" data-valmsg-for="CandidateDesc" data-valmsg-replace="true"></span>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success pull-right">Submit</button>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</div>

<script>
    $('#txtLoginDOB').datepicker({
        uiLibrary: 'bootstrap',
        format: "dd/mm/yyyy"
    });
</script>
<script> 
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
    <div class="clearfix"></div>
</div>

